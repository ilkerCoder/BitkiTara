<UserControl x:Class="MyWpfApp.View.UserControls.TopControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">
    <Grid>
        <Border Background="White" Grid.ColumnSpan="2">
            <DockPanel  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                  

                            <DockPanel HorizontalAlignment="Right" Grid.Column="1">
                        <Button Content="_"   x:Name="btnMinimize" Click="btnMinimize_Click" Width="35"/>
                        <Button Content="X" x:Name="btnKapat" Click="btnKapat_Click" Background="#FFEF2424"  Width="35" />
                    </DockPanel>
                </Grid>
            </DockPanel>

        </Border>

    </Grid>
</UserControl>
